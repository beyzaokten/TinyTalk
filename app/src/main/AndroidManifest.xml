<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TinyTalk"
        tools:targetApi="31">
        <activity
            android:name=".DictionaryActivity"
            android:exported="false"
            android:label="@string/title_activity_dictionary"
            android:theme="@style/Theme.TinyTalk" />

        <activity
            android:name=".AnimalsActivity"
            android:exported="true" />
        <activity android:name=".FruitsActivity"
            android:exported="true" />
        <activity android:name=".ColorsActivity"
            android:exported="true" />
        <activity android:name=".ChatActivity"
            android:exported="true" />
        <activity android:name=".GameMenuActivity"
            android:exported="true" />
        <activity android:name=".WordMatchActivity"
            android:exported="true" />
        <activity android:name=".ColorQuizActivity"
            android:exported="true" />
        <activity android:name=".MatchPairsActivity"
            android:exported="true" />
        <activity android:name=".StoryFillActivity"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TinyTalk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>